<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Top Right Button for Other Purposes -->
    <Button
        android:id="@+id/extraTopRightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAVIGATE TO SECOND ACTIVITY"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Main Layout with Buttons in Specified Positions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/extraTopRightButton"
        android:layout_marginTop="16dp">

        <!-- Top Row: Top Left and Top Right Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/topLeftButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Top Left" />

            <Button
                android:id="@+id/topRightButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Top Right" />
        </LinearLayout>

        <!-- Center Button -->
        <Button
            android:id="@+id/centerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

        <!-- Bottom Row: Bottom Left and Bottom Right Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/bottomLeftButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bottom Left" />

            <Button
                android:id="@+id/bottomRightButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bottom Right" />
        </LinearLayout>

        <!-- Uneditable Text Field -->
        <TextView
            android:id="@+id/uneditableTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uneditable Text Field"
            android:editable="false"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textAlignment="center" />
    </LinearLayout>
</RelativeLayout>
